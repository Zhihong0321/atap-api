{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-api",
    "rootDir": ".",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["api/**/*.ts", "prisma/**/*.ts", "types/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-api"]
}
