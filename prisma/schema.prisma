generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- New Models for Solar News App ---

enum NewsTaskStatus {
  pending
  running
  completed
  failed
}

enum NewsLeadStatus {
  pending
  rewrite_pending
  rewritten
  error
}

model News {
  id          String   @id @default(uuid())
  title_en    String
  title_cn    String
  title_my    String
  content_en  String
  content_cn  String
  content_my  String
  news_date   DateTime @db.Timestamptz(6)
  image_url   String?
  sources     Json?
  is_published Boolean  @default(false)
  is_highlight Boolean  @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)

  news_lead   NewsLead?

  category_id String?
  category    Category? @relation(fields: [category_id], references: [id])
  tags        Tag[]     @relation("NewsTags")
}

model NewsTask {
  id              String         @id @default(uuid())
  query           String
  account_name    String?
  collection_uuid String?
  status          NewsTaskStatus @default(pending)
  error           String?
  created_at      DateTime       @default(now()) @db.Timestamptz(6)
  updated_at      DateTime       @updatedAt @db.Timestamptz(6)

  leads NewsLead[]
  
  category_id String?
  category    Category? @relation(fields: [category_id], references: [id])
}

model NewsLead {
  id            String         @id @default(uuid())
  task_id       String
  task          NewsTask       @relation(fields: [task_id], references: [id])
  headline      String
  source        Json?
  published_at  DateTime?      @db.Timestamptz(6)
  status        NewsLeadStatus @default(pending)
  news_id       String?        @unique
  news          News?          @relation(fields: [news_id], references: [id])
  created_at    DateTime       @default(now()) @db.Timestamptz(6)
  updated_at    DateTime       @updatedAt @db.Timestamptz(6)

  @@unique([task_id, headline])
}

model Category {
  id             String   @id @default(uuid())
  name_en        String   @unique
  name_cn        String   @unique
  name_my        String   @unique
  description_en String?
  description_cn String?
  description_my String?
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  updated_at     DateTime @updatedAt @db.Timestamptz(6)

  tags           Tag[]
  news           News[]
  tasks          NewsTask[]
}

model Tag {
  id          String   @id @default(uuid())
  name        String
  category_id String
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)

  news        News[]   @relation("NewsTags")
  
  @@unique([category_id, name])
}

model TypeOfEvent {
  id         String   @id @default(uuid())
  name_en    String   @unique
  name_cn    String   @unique
  name_my    String   @unique
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @updatedAt @db.Timestamptz(6)

  calendar_items CalendarItem[]

  @@map("type_of_event")
}

model CalendarItem {
  id                String       @id @default(uuid())
  date              DateTime     @db.Timestamptz(6)
  type_of_event_id  String
  title_en          String
  title_cn          String
  title_my          String
  created_at        DateTime     @default(now()) @db.Timestamptz(6)
  updated_at        DateTime     @updatedAt @db.Timestamptz(6)

  type_of_event TypeOfEvent @relation(fields: [type_of_event_id], references: [id])

  @@unique([type_of_event_id, date])
  @@index([type_of_event_id])
  @@map("calendar_item")
}
